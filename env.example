# Production environment variables
NODE_ENV=production
PORT=4000

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=meetings
DB_USERNAME=meetings
DB_PASSWORD=meetings

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Bitrix
BITRIX_DEV_MODE=true
VITE_DEV_BITRIX_TOKEN=your_real_bitrix_token_here
BITRIX_REST_URL=https://bitrix24.newhc.by/rest/15/qseod599og9fc16a
CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300
ADMIN_JWT_SECRET=change-me
ADMIN_EMAIL=admin@example.com
ADMIN_NAME=Admin
ADMIN_PASSWORD=admin123
PUBLIC_TOKEN_PAIRS=widget1:secretA,widget2:secretB

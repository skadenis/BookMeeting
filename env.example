# Production environment variables
NODE_ENV=production
PORT=4000

# Database
DB_HOST=postgres
DB_PORT=5432
DB_NAME=meetings
DB_USERNAME=meetings
DB_PASSWORD=meetings

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Bitrix
BITRIX_DEV_MODE=false
BITRIX_REST_URL=https://your-domain.bitrix24.ru/rest/your-user-id/your-access-token
ENABLE_LEADS_SYNC=false
CORS_ORIGIN=https://book-meeting.centrcred.by

# Security
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=300
ADMIN_JWT_SECRET=change-me-in-production
ADMIN_EMAIL=admin@centrcred.by
ADMIN_NAME=Admin
ADMIN_PASSWORD=admin123

# Public tokens (pairs only)
PUBLIC_TOKEN_PAIRS=widget1:secretA,widget2:secretB
